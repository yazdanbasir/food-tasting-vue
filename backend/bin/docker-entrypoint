#!/bin/bash -e

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare
  # On fresh deploy (empty ingredients table), import from scraper DB in image
  if [ "$(./bin/rails runner 'print Ingredient.count' 2>/dev/null)" = "0" ]; then
    ./bin/rails import:ingredients
  fi
fi

exec "${@}"
